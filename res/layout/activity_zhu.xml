<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/t0127c45a8e3188f139"
    android:orientation="vertical"
    tools:context=".ZhuActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1_zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PDA设备"
            android:textSize="36px" />

        <Button
            android:id="@+id/button1_zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高级" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

    

        <ImageButton
            android:id="@+id/imageButton1_zhu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/icon_select_point" 
             />
       
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button2_zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜单" />

        <TextView
            android:id="@+id/textView2_zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1：200" />

        <Button
            android:id="@+id/button3_zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>