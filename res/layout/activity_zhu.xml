<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_map"
    tools:context=".ZhuActivity" >

    <com.easymap.android.maps.v3.MapView
        android:id="@+id/MapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </com.easymap.android.maps.v3.MapView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1_zhu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button1_zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/but_zhu_set" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton1_zhu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/icon_select_point" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <Button
            android:id="@+id/button2_zhu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_zhu_menu" />

        <TextView
            android:id="@+id/textView2_zhu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <Button
            android:id="@+id/button3_zhu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_zhu_remove" />
    </LinearLayout>

</FrameLayout>